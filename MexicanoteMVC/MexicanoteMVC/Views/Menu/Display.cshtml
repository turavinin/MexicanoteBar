@model MexicanoteMVC.Models.PedidoDisplayModel
@{
    ViewData["Title"] = "Display";
}

@if (Model.Pedido == null)
{
    <h4 class="text-danger">El pedido no fue encontrado</h4>
}
else
{
    <div class="d-flex mt-lg-5 justify-content-center">
        <div class="list-group w-50 h-100 text-center">
            <p class="list-group-item" id="display-titulo">TU PEDIDO</p>
            <p class="list-group-item">@Model.Pedido.NombreCliente</p>
            <p class="list-group-item">@Model.Pedido.DireccionCliente</p>
            <p class="list-group-item">@Model.Pedido.EmailCliente</p>
            <p class="list-group-item">@Model.Pedido.FechaPedido</p>
            <p class="list-group-item">@Model.ItemComprado</p>
            <p class="list-group-item">@Model.Pedido.CantidadTotal</p>
            <p class="list-group-item">@string.Format("{0:C}", Model.Pedido.PrecioTotal)</p>

            @*UPDATE Nombre*@
            <button class="btn btn-warning w-100 text-white mt-1" type="button" data-toggle="collapse" data-target="#editarNombreForm"
                    aria-expanded="false" aria-controls="editarNombreForm">
                Editar Nombre
            </button>

            <form class="collapse" id="editarNombreForm" asp-action="UpdateNombre">
                <input name="id" value="@Model.Pedido.Id" type="hidden">

                <div class="form-group">
                    <label class="control-label"></label>
                    <input name="nombreCliente" value="@Model.Pedido.NombreCliente" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Cambiar nombre" class="btn btn-primary" />
                </div>
            </form>

            @*UPDATE Nombre*@
            <button class="btn btn-info w-100 text-white mt-1" type="button" data-toggle="collapse" data-target="#editarEmailForm"
                    aria-expanded="false" aria-controls="editarEmailForm">
                Editar Email
            </button>

            <form class="collapse" id="editarEmailForm" asp-action="UpdateEmail">
                <input name="id" value="@Model.Pedido.Id" type="hidden">

                <div class="form-group">
                    <label class="control-label"></label>
                    <input name="emailCliente" value="@Model.Pedido.EmailCliente" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Cambiar email" class="btn btn-primary" />
                </div>
            </form>

            @*DELETE*@
            <a asp-action="Delete" asp-route-id="@Model.Pedido.Id" class="btn btn-danger w-100 mt-5 text-white">Eliminar Pedido</a>
        </div>

        

    </div>
}
